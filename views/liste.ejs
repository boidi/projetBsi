<!doctype html>
<html lang="en">
<% include templates/header.ejs %>
<body>

<% include templates/navbar.ejs %>

<div class="container">
    <div class="col-sm-8 liste" style="margin-top:100px;font-size:medium">
        <table class="col-sm-offset-1 table " style="border: 2px solid gainsboro; box-shadow: 10px 10px 5px #888888" >
            <thead>
            <tr>
                <th>
                    prenom
                </th>
                <th>nom</th>
                <th>login</th>
                <th>poste</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
        <% if (employes.length >0 )  { %>
        <% employes.forEach(function (employe)  { %>

        <tr >
        <td class="warning">
                <%= employe.prenom %>
        </td>
            <!--</div>
            <div class=" col-md-2 prenom">-->
        <td class="info">
                <%=employe.nom %>
        </td>

        <td class="warning"> <%=employe.login %> </td>
            <!--</div>
            <div class=" col-md-5 prenom">-->
        <td class="active">  <%=employe.poste %> </td>
            <td width=200>
               <!-- <a class="btn btn-default" href=""><span class="glyphicon glyphicon-eye- --><!--open"></span>Voir</a>-->
                <a class="btn btn-primary" href="/modifsalarie/<%= employe.id %>">Modifier</a>
                <form action="/deleteSalarie/<%= employe.id %>" method="post" name="modif">

                    <input type="hidden" name="_method" value="delete"/>

                    <button type="submit" onclick="return(confirMsg())" class="btn btn-danger">Supprimer</button>
                <!-- script pour delete un utilisateur-->
                <script type="text/javascript">
                    function confirMsg() {
                        if (confirm("Voulez-vous supprimer cet utilisateur ?")) { // Clic sur OK
                           modif.submit();
                        }

                        return false;
                    }
                </script>


                </form>
            </td>
        </tr>
          <!-- </div>-->
        <!--</div> -->
        <% }) %>
        <% }else { %>

        <td> la liste est vide</td>

        <% } %>
            </tbody>
        </table>
    </div>
    <hr>

    <% include templates/retour.ejs%>
    </div>

<% include templates/footer.ejs %>
</body>
</html>