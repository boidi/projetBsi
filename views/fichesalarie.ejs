                        <input id="prenom" name="prenom" type="text" placeholder="prenom"                         onblur="verifChamp()" class="form-control input-md" required="">

                    </div>
                </div>
                <div class="form-group">
                <label style="text-align: justify" class="col-md-4 control-label"                                            for="civilite">Civilité</label>
                <div class="col-md-4">
                     <select id="civilite" name="civilite" style="width: 213px;height: 34px;background: white" class="form-control                     input-md" required="">
                        Votre civité<br>
                        <option value="Madame">Madame</option>
                        <option value="Monsieur">Monsieur</option>
                    </select>
                </div>
              </div>
                <!--selected valeur-->

                <div class="form-group">
                <label style="text-align: justify" class="col-md-4 control-label" for="poste">Poste                         occupé</label>
                <div class="col-md-4">
                    <input id="poste" name="poste" onblur="verifChamp()" type="text"                  placeholder="poste" class="form-control input-md" required="" >
                </div>
               </div>
                <div class="form-group">
                <label style="text-align: justify" class="col-md-4 control-label" for="nbreEnf">Nombre                     d'enfants mineurs</label>
                <div class="col-md-4">
                    <input id="nbreEnf" name="nbreEnf" type="number"
                    placeholder="nombre enf" class="form-control input-md" required="">
                </div>
               </div>

                <div class="form-group">
                    <label style="text-align: justify" class="col-md-4 control-label" for="naisdate">Date                de naissance</label>
                    <div class="col-md-4">
                        <input id="naisdate" name="naisdate" type="date" placeholder="date                  nais" class="form-control input-md" required="">
                    </div>
                </div>
                <div class="form-group">
                    <label style="text-align: justify" class="col-md-4 control-label" for="email">Email</label>
                    <div class="col-md-4">
                        <input id="email" name="email" type="email" placeholder="Email"                        class="form-control input-md" required="">
                    </div>
                </div>
                <!-- Password input-->
                <div class="form-group">
                    <label style="text-align: justify" class="col-md-4 control-label" for="motDePass">Mot                   de passe</label>
                    <div class="col-md-4">
                        <input id="motDePass" name="motDePass" type="password"                           placeholder="Password " onblur="verifChamp()" class="form-control input-md"                required="">

                    </div>
                </div>
                <div class="form-group">
                    <label style="text-align: justify" class="col-md-4 control-label" for="login">Login</label>
                    <div class="col-md-4">
                        <input id="login" name="login" onblur="verifChamp()" type="text"              placeholder="login" class="form-control input-md" required="" >
                    </div>
                </div>
                <div class="form-group">
                    <label style="text-align: justify" class="col-md-4 control-label"                                     for="adresse">Adresse</label>
                    <div class="col-md-4">
                        <input id="adresse" name="adresse" onblur="verifChamp()"type="text"                  placeholder="adresse"  class="form-control input-md" required="" >
                    </div>
                </div>
                <div class="form-group">
                    <label style="text-align: justify" class="col-md-4 control-label" for="poste">code                         postal</label>
                    <div class="col-md-4">
                        <input id="codeposte" name="codeposte" type="number"                              placeholder="code postal" onblur="verifCp()"class="form-control input-md"                       required="">
                    </div>
                </div>
                <div class="form-group">
                    <label style="text-align: justify" class="col-md-4 control-label" for="poste">est                          admin</label>
                    <div class="col-md-4">
                        <select id="isadmin" name="isadmin" type="number" placeholder="admin? 0=non;1=oui" class="form-control input-md" required=""><option value="1">est admin</option>
                            <option value="0">non admin</option>
                        </select>
                    </div>
                </div>

                <!-- Button -->

                <div class="form-group">


                    <label class="col-md-4 control-label" for=""></label>

                    <div class="col-md-1">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>

                <!-- pour vider les input-->

                    <label class="col-md-1 control-label" for=""></label>
                    <div class="col-md-1">
                        <button type="reset" class="btn btn-primary">Annuler</button>
                    </div>

                </div>
                <hr>
                <div col-sm-4>
                    <% include templates/retour.ejs%>
                </div>


            </fieldset>
        </form>


    </section>
</div>
