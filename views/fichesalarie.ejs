                <!-- Text input-->
                <div class="form-group">
                <label style="text-align: justify" class="col-md-4 control-label" for="prenom">Nom</label>
                 <div class="col-md-4">
                    <input id="nom" name="nom" onblur="verifChamp()" type="text"                              placeholder="nom" class="form-control input-md" required="">

                 </div>
                </div>

                <div class="form-group">
                    <label style="text-align: justify" class="col-md-4 control-label"                                            for="prenom">Prénom</label>
