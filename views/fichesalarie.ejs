        <form class="col-sm-offset-1 col-sm-8 form-horizontal" style="margin-top: 60px; margin-bottom: 10px" method="POST"          action="/newsalarie" onsubmit="return verifSaisie(this)">
            <fieldset>

                <!-- Form Name -->
