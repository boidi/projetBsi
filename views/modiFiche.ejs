            <!--mdp  , login ,adresse  , codePoste-->

            <div class="form-group">
                <label for="mdp">motdepass:</label>
                <input type="password" class="form-control" id="motdepass" name="modpass"
                       value="<%= item.mdp %>">
            </div>
            <div class="form-group">
                <label for="login">login:</label>
                <input type="text" class="form-control" id="login" name="nlogin"
                       value="<%= item.login %>">
            </div>
            <div class="form-group">
                <label for="adresse">Adresse:</label>
                <input type="text" class="form-control" id="adresse" name="nadresse"
                       value="<%= item.adresse %>">
            </div>
            <div class="form-group">
                <label for="codepost">Code postal:</label>
                <input type="number" class="form-control" id="codepost" name="codepost"
                       value="<%= item.codePoste %>">
            </div>
        <div class="container">
            <button type="reset" class="btn btn-primary">Annuler</button>


            <button type="submit" class="col-md-offset-2 col-sm-2 btn btn-primary"style="margin-right: 10px">Enregistrer</button></div>


         </form>
         <%}) %>
