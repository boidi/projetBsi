<html lang="en">
<% include templates/header.ejs %>
<body>

<% include templates/navbaradmin.ejs %>
<div class ="container">
    <div class=" col-sm-2"style="margin-top: 70px ;margin-left: 50px">
        <% include templates/retour.ejs%>
    </div>
  <section class="col-sm-8 modif">
    <!--<div class="jumbotron">-->

            <p style="margin-top: 80px">modifier une fiche salari√©e </p>
       <!-- </div>-->
        <% result.forEach(function(item){ %>


        <form class="col-sm-8 " role="form" action="/salarie/<%= item.id %>" method="post">
            <input type="hidden" name="_method" value="put"/>
            <div class="form-group">
                <label for="fname">Nom:</label>
                <input type="text" class="form-control" id="nname" name="lenom"
                       value="<%= item.nom%>" required>
            </div>
            <div class="form-group">
                <label for="fname">Prenom:</label>
                <input type="text" class="form-control" id="nname" name="prenom"
                       value="<%= item.prenom%>" required>
            </div>

                <label for="nposte">Poste:</label>
                <div class="form-group">
                <input type="text" class="form-control" id="nposte" name="leposte"
                       value="<%= item.poste %>" required>
            </div>

            <div class="form-group">
                <label for="nbreE">nbreEnf:</label>
                <input type="number" class="form-control" id="nbreE" name="nbreE"
