<!doctype html>
<html lang="en">

<% include templates/header.ejs %>

<body class="bconnect">

<div class="container">

        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <div class="col-offset-3">
                        <a class="navbar-brand" href="/">
                            <span id="logo"  class="glyphicon glyphicon-tint"></span>
                             BSI Citizen Can
                        </a>
                    </div>
                </div>

            </div>
        </nav>


    <!--<div class="container pconnection"style=" background-image: url('bureau.jpg');background-repeat: no-repeat;background-size: 100%">-->

        <div class ="col-sm-offset-3 col-sm-6 connection " >
            <div class=" col-sm 2 flash" style="">
                <% if(locals.flash && locals.flash.error){ %>
                <div class="negative">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true" style="color: darkred;"></span>
                    <%= flash.error %>
                </div>
                <% } %>
                <% if(locals.flash && locals.flash.success){ %>
                <div class="positive">
                    <%= flash.success %>
                </div>
                <% } %>
            </div>

            <form class=" form-horizontal"  style=" "
                  method="post" action="connexion">
                <legend>Veuillez-vous identifier</legend>
                <fieldset>
                    <div class="form-group">
                        <label class ="col-md-4" for="login"> votre login</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control input-md" id="login"
                                   name="login" placeholder="votre login" required="" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class ="col-md-4" for="motdepass">mot de pass</label>
                        <div class="col-md-4">
                        <input type="password" class="form-control input-md" id="motdepass"
                          name="motdepass" placeholder=" votre mot de pass"  required="">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">Valider</button>
                    </div>
                </fieldset>
            </form>


        </div>


    <!--</div>-->
    <% include templates/footer.ejs %>
</div>

</body>


</html>